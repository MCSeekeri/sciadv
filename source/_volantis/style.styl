.article a:not([class]):not([data-fancybox]),
.content > a
  position: relative
  text-decoration: none
  &:before
    content: ""
    position: absolute
    left: 0
    bottom: -1px
    height: 1px
    width: 100%
    background: #ff5722
    transform: scale(0)
    transition: all 0.5s
  &:hover:before
    transform: scale(1)

article#post
  & > h1, & > h2, & > h3
    font-weight: 700
    background: linear-gradient(to bottom, transparent 60%, rgba(189, 202, 219, .3) 0) no-repeat
    display: initial
    width: auto
    border-bottom: none
  & > h3
    font-weight: 500
    position: initial

ul.list-v.rightmenu
  box-shadow: 0 -2px 4px 0 rgba(0, 0, 0, .08), 0 4px 8px 0 rgba(0, 0, 0, .08), 0 8px 16px 0 rgba(0, 0, 0, .08)
  border-radius: 8px
  li
    a
      cursor: pointer !important

h1.title
  text-align: center
h1.title.common_read_h1
  text-align: center !important
